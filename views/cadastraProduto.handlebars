<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/cadastroPro.css">
</head>

<div id="container">
    <header>
        <h1>Cadastrar Produtos</h1>
    </header>
    <div id="forms">
        <form action="/vendedor/cadastroproduto" method="post" id="form" enctype="multipart/form-data">
            <div class="inputNome">
                <input type="text" name="nome" placeholder="Nome do Veículo" required>
            </div>

            <div class="inputPreco">
                <input type="number" name="preco" placeholder="Preço do Veículo" step="0.01" required>
            </div>

            <div class="inputFoto">
                <input type="file" name="foto" accept="image/*" required>
            </div>

            <a href="/vendedor/loja"><button type="submit" id="button">Cadastrar</button></a><br><br>
            <a href="/cliente/loja">VOLTAR</a>
        </form>
    </div>
</div>
